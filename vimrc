execute pathogen#infect()
syntax on
filetype plugin indent on

set backspace=indent,eol,start
set clipboard=unnamed
set noswapfile

set background=dark
colorscheme solarized

set tabstop=2
set shiftwidth=2
set expandtab

set number
set nocompatible
set hlsearch
set incsearch
set cursorline
set cursorcolumn

set noshowmode
set laststatus=2
let g:airline_left_sep = ''
let g:airline_right_sep = ''

let mapleader = ","
imap jk <Esc>
